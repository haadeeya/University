<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Profile</title>
    <link rel="stylesheet" href="~/Content/studentregistration.css">
    <script src="~/Scripts/createprofile.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>
<body onload="loadDropdown()" onsubmit="createProfile(event)">
    <div class="container">
        <span id="error"></span>
        <form>
            <h1> Create Profile </h1>

            <fieldset>

                <legend><span class="number">1</span> Your Basic Info</legend>

                <div class="flex">
                    <div class="text-container">
                        <label for="name">First Name</label>
                        <input type="text" class="textbox" id="fname" name="user_name" required>
                    </div>
                    <div class="text-container">
                        <label for="surname">Last Name</label>
                        <input type="text" class="textbox" id="lname" name="user_surname" required>
                    </div>
                </div>

                <div class="flex">
                    <div class="text-container">
                        <label for="nid">NID</label>
                        <input type="text" class="textbox" id="nid" name="user_nid" required>
                    </div>
                    <div class="text-container">
                        <label for="name">Guardian Name</label>
                        <input type="text" id="gname" name="user_guardianName" required>
                    </div>
                </div>

                <div class="flex">
                    <div class="text-container">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="user_email" required>
                    </div>
                    <div class="text-container">
                        <label for="phonenumber">Phone Number</label>
                        <input type="text" id="phonenumber" name="user_phonenumber" required>
                    </div>
                </div>

                <div class="flex">
                    <div class="text-container">
                        <label for="dateofbirth">Date of Birth</label>
                        <input type="date" id="dateofbirth" name="user_dateofbirth" required>
                    </div>
                </div>

            </fieldset>
            <fieldset>

                <legend><span class="number">2</span> Your Results <button onclick="addSubject()">+</button></legend>

                <div class="dropdowncontainer" id="dropdown">
                    <div class="item">
                        <label for="subject">Subject Name:</label>
                        <select id="subjectname0" name="user_subject">
                        </select>
                    </div>

                    <div class="item">
                        <label for="grade">Grade:</label>
                        <select id="grade0" name="user_grade">
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="E">E</option>
                            <option value="F">F</option>
                        </select>
                    </div>
                </div>

            </fieldset>

            <button class="submitbutton" type="submit">Save</button>

        </form>
    </div>

</body>
</html>



