<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Form</title>
    <link rel="stylesheet" href="~/Content/studentregistration.css">
    <script src="~/Scripts/createprofile.js" type="text/javascript"></script>
</head>
<body onload="loadDropdown()">
    <div class="container">
            <form>
                <h1> Create Profile </h1>

                <fieldset>

                    <legend><span class="number">1</span> Your Basic Info</legend>

                    <div class="flex">
                        <div class="text-container">
                            <label for="name">First Name:</label>
                            <input type="text" class="textbox" id="name" name="user_name">
                        </div>
                        <div class="text-container">
                            <label for="surname">Surname:</label>
                            <input type="text" class="textbox" id="name" name="user_surname">
                        </div>
                    </div>

                    <div class="flex">
                        <div class="text-container">
                            <label for="nid">NID:</label>
                            <input type="text" class="textbox" id="name" name="user_nid">
                        </div>
                        <div class="text-container">
                            <label for="name">Guardian Name:</label>
                            <input type="text" id="guardianName" name="user_guardianName">
                        </div>
                    </div>

                    <div class="flex">
                        <div class="text-container">
                            <label for="email">Email:</label>
                            <input type="email" id="mail" name="user_email">
                        </div>
                        <div class="text-container">
                            <label for="phonenumber">Phone Number:</label>
                            <input type="text" id="phonenumber" name="user_phonenumber">
                        </div>
                    </div>

                    <div class="flex">
                        <div class="text-container">
                            <label for="dateofbirth">Date of Birth:</label>
                            <input type="date" id="dateofbirth" name="user_dateofbirth">
                        </div>
                    </div>

                </fieldset>
                <fieldset>

                    <legend><span class="number">2</span> Your Results <button onclick="addSubject()">+</button></legend>

                    <div class="flex" id="dropdown">
                        <div class="text-container">
                            <label for="subject">Subject Name:</label>
                            <select id="subjectname" name="user_subject">
                            </select>
                        </div>

                        <div class="text-container">
                            <label for="grade">Grade:</label>
                            <select id="grade" name="user_grade">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="E">E</option>
                                <option value="F">F</option>
                            </select>
                        </div>
                    </div>

                </fieldset>

                <button class="submitbutton" type="submit">Save</button>

            </form>
        </div>

</body>
</html>


