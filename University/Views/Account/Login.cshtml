<!DOCTYPE html>

<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<script type="text/javascript" src="~/appScripts/Login.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<body>
    <div class="container" onsubmit="login()">

        <form class="login-form border" id="myForm">
            <h1 style="text-align: center; font-family: 'Noto Sans'; color: rgb(24, 78, 165);">Login</h1>

            <div class="mb-4">
                <label class="form-label" for="Name">Username</label>
                <input type="text" id="username" name="txt_username">
            </div>

            <div class="mb-4">
                <label class="form-label" for="Email">Password</label>
                <input type="password" id="password" name="txt_password">
            </div>

            <div class="mb-4 buttonclass">
                <input type="submit" value="Login" />
            </div>
            <div class="mb-4">
                <div class="mb-4 buttonclass">
                    <span style="font-family:'Noto Sans'">New User?</span>
                    <a style="font-family:'Noto Sans';" href="/Account/Register">Register</a>
                </div>
            </div>
        </form>
    </div>
</body>


